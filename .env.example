# ──────────────────────────────────────────────
# Manufacturing Anomaly Detection — Environment Variables
# Copy to .env and fill in real values: cp .env.example .env
# NEVER commit .env — it is gitignored
# ──────────────────────────────────────────────

# ──────────────────────────────────────────────
# MLflow
# ──────────────────────────────────────────────
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=anomaly_detection_cmapss

# ──────────────────────────────────────────────
# Model
# ──────────────────────────────────────────────
MODEL_NAME=lstm_autoencoder
MODEL_STAGE=Production
ANOMALY_THRESHOLD=0.65

# ──────────────────────────────────────────────
# Database (PostgreSQL)
# ──────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=anomaly_db
POSTGRES_USER=anomaly_user
POSTGRES_PASSWORD=changeme_in_prod

# ──────────────────────────────────────────────
# API (FastAPI)
# ──────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
MAX_BATCH_SIZE=500

# ──────────────────────────────────────────────
# Streamlit Dashboard
# ──────────────────────────────────────────────
STREAMLIT_API_URL=http://fastapi:8000
STREAMLIT_REFRESH_INTERVAL_SEC=5
